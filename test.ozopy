def f():
    c = get_surface_color()
    if c == BLACK:
        color(0, 0, 0)
    elif c == BLUE:
        color(0, 0, 127)
    elif c == GREEN:
        color(0, 127, 0)
    elif c == CYAN:
        color(0, 127, 127)
    elif c == RED:
        color(127, 0, 0)
    elif c == MAGENTA:
        color(127, 0, 127)
    elif c == YELLOW:
        color(127, 127, 0)
    else: # WHITE
        color(127, 127, 127)

while True:
    f()
